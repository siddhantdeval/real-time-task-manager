generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "linux-musl-arm64-openssl-3.0.x"]
  output        = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum Role {
  admin
  member
}

enum Status {
  todo
  in_progress
  done
}

enum Priority {
  low
  medium
  high
}

enum ProjectStatus {
  ACTIVE
  PLANNING
  DRAFT
  BLOCKED
  ARCHIVED
}

enum MemberRole {
  LEAD
  MEMBER
  VIEWER
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String    @unique
  password_hash String?
  google_id     String?   @unique
  avatar_url    String?
  role          Role      @default(member)
  reset_token         String?
  reset_token_expires DateTime?
  created_at    DateTime  @default(now())

  owned_projects   Project[]
  assigned_tasks   Task[]
  project_members  ProjectMember[]
  project_activities ProjectActivity[]

  @@index([email])
  @@map("users")
}

model Project {
  id          String        @id @default(uuid())
  name        String
  description String?
  status      ProjectStatus @default(ACTIVE)
  labelColor  String?       @default("#6366f1")
  owner_id    String
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt

  owner       User            @relation(fields: [owner_id], references: [id], onDelete: Restrict)
  tasks       Task[]
  members     ProjectMember[]
  activities  ProjectActivity[]

  @@index([name])
  @@map("projects")
}

model ProjectMember {
  id        String     @id @default(uuid())
  projectId String
  userId    String
  role      MemberRole @default(MEMBER)
  joinedAt  DateTime   @default(now())

  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([projectId, userId])
  @@map("project_members")
}

model ProjectActivity {
  id        String   @id @default(uuid())
  projectId String
  actorId   String
  action    String
  entityRef String?
  createdAt DateTime @default(now())

  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  actor     User     @relation(fields: [actorId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@map("project_activities")
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      Status   @default(todo)
  priority    Priority @default(medium)
  due_date    DateTime?
  project_id  String
  assignee_id String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  project     Project  @relation(fields: [project_id], references: [id], onDelete: Cascade)
  assignee    User?    @relation(fields: [assignee_id], references: [id], onDelete: SetNull)

  @@index([title])
  @@map("tasks")
}
