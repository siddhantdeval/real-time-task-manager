# Production Environment Variables Example
# Copy this to .env.prod and fill in real values

PORT=8080
NODE_ENV=production

# Database Configuration
POSTGRES_USER=sid
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=task_manager
DB_URL=postgres://sid:secure_password_here@postgres:5432/task_manager

# Redis Configuration
REDIS_PASSWORD=secure_redis_password_here
REDIS_URL=redis://:secure_redis_password_here@redis:6379

# Secrets
JWT_SECRET=generate_a_long_random_string_here
SESSION_TTL=86400

# Logging
LOG_LEVEL=info

# Google OAuth (Production Credentials)
GOOGLE_CLIENT_ID=your_prod_client_id
GOOGLE_CLIENT_SECRET=your_prod_client_secret
